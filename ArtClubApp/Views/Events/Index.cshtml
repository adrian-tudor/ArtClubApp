@model IEnumerable<ArtClubApp.Models.Event>
@using Microsoft.AspNetCore.Identity
@using ArtClubApp.Models
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Current Events</h1>

<p>
    <a class="btn btn-outline-info flex-grow-1 m-1 p-2" asp-action="Create">Create New</a>

</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Time)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td>
                    <a class="w-1 btn btn-lg btn-primary" asp-action="Edit" asp-route-id="@item.Event_id">Edit</a>
                    <a class="w-1 btn btn-lg btn-primary" asp-action="Details" asp-route-id="@item.Event_id">Details</a>
                    <a class="w-1 btn btn-lg btn-primary" asp-action="Delete" asp-route-id="@item.Event_id">Delete</a>
                    
                </td>
        </tr>
}
    </tbody>
</table>
