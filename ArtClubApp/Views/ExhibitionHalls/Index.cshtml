@model IEnumerable<ArtClubApp.Models.ExhibitionHall>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Exhibition Halls</h1>

<p>
    <a class="btn btn-outline-info flex-grow-1 m-1 p-2" asp-action="Create">Add New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rent)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rent)
            </td>
            <td>
                <a class="w-1 btn btn-lg btn-primary"asp-action="Edit" asp-route-id="@item.ExhibitionHall_Id">Edit</a> 
                <a class="w-1 btn btn-lg btn-primary" asp-action="Details" asp-route-id="@item.ExhibitionHall_Id">Details</a> 
                    <a class="w-1 btn btn-lg btn-primary" asp-action="Delete" asp-route-id="@item.ExhibitionHall_Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
