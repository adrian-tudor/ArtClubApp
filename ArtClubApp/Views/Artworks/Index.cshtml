@model IEnumerable<ArtClubApp.Models.Artwork>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
        .contentBackgroundImage {
            background-image: url("/img/blue-watercolor.png");
            height: auto;
            background-size: 100% 80%;
            background-position: center;
            background-repeat: no-repeat;
            background-attachment: fixed;
        }
</style>
<h1>Available Artworks</h1>
<body class="contentBackgroundImage">
<p>
        <a class="btn btn-outline-info flex-grow-1 m-1 p-2" asp-action="Create">Add New Artwork</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rent)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rent)
            </td>
            <td>
                   
                        <a class="w-1 btn btn-lg btn-primary" asp-action="Edit" asp-route-id="@item.Artwork_Id">Edit</a> 
                        <a class="w-1 btn btn-lg btn-primary" asp-action="Details" asp-route-id="@item.Artwork_Id">Details</a> 
                        <a class="w-1 btn btn-lg btn-primary" asp-action="Delete" asp-route-id="@item.Artwork_Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>